    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <materialDesign:ColorZone Mode="PrimaryMid" Padding="16">
            <DockPanel>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22">RadioData</TextBlock>
            </DockPanel>
        </materialDesign:ColorZone>

        <StackPanel Grid.Row="1" Margin="20">
            <GroupBox Header="Audio Settings" Style="{DynamicResource MaterialDesignCardGroupBox}" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <ComboBox materialDesign:HintAssist.Hint="Input Device" 
                              ItemsSource="{Binding InputDevices}" 
                              SelectedIndex="{Binding SelectedInputDeviceIndex}"
                              Margin="0,0,0,10"/>
                    <ComboBox materialDesign:HintAssist.Hint="Output Device" 
                              ItemsSource="{Binding OutputDevices}" 
                              SelectedIndex="{Binding SelectedOutputDeviceIndex}"
                              Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Tone Frequency Meters" FontWeight="Bold" Margin="0,10,0,10"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Input Tone: " Width="80"/>
                        <TextBlock Text="{Binding InputFrequency, StringFormat='{}{0:F0} Hz'}" FontWeight="Bold" Width="80"/>
                        <TextBlock Text="(Mark=1200, Space=2200)" FontSize="10" Foreground="Gray"/>
                    </StackPanel>
                    <ProgressBar Value="{Binding InputFrequency}" Minimum="1000" Maximum="2400" Height="10"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                        <TextBlock Text="Output Tone: " Width="80"/>
                        <TextBlock Text="{Binding OutputFrequency, StringFormat='{}{0:F0} Hz'}" FontWeight="Bold" Width="80" Foreground="Red"/>
                    </StackPanel>
                    <ProgressBar Value="{Binding OutputFrequency}" Minimum="1000" Maximum="2400" Height="10" Foreground="Red"/>
                </StackPanel>
            </GroupBox>

            <TextBox Text="{Binding MessageToSend, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Message to Transmit"
                     Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,0,10"/>

            <CheckBox Content="Compress Images (50-66% smaller, faster transfer)" 
                      IsChecked="{Binding CompressImages}"
                      Margin="0,0,0,10"/>

            <Button Command="{Binding StartTransmissionCommand}" 
                    Content="TRANSMIT MESSAGE" 
                    Style="{DynamicResource MaterialDesignRaisedButton}"
                    Height="50" Margin="0,0,0,10"/>

            <Button Command="{Binding SendFileCommand}" 
                    Content="SEND FILE" 
                    Style="{DynamicResource MaterialDesignRaisedButton}"
                    Height="50" Margin="0,0,0,10"/>

            <TextBlock Text="File Transfer Progress" Margin="0,10,0,5"/>
            <ProgressBar Value="{Binding TransferProgress}" Maximum="100" Height="10" />
            <TextBlock Text="{Binding TransferStatus}" 
                       Margin="0,5,0,10" 
                       FontSize="11"
                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>

            <GroupBox Header="Debug Log" Style="{DynamicResource MaterialDesignCardGroupBox}" Height="150">
                <ScrollViewer>
                    <TextBlock Text="{Binding DebugLog}" TextWrapping="Wrap" FontFamily="Consolas"/>
                </ScrollViewer>
            </GroupBox>
        </StackPanel>

        <StatusBar Grid.Row="2" Background="{DynamicResource MaterialDesignCardBackground}">
            <TextBlock Text="{Binding StatusMessage}" Margin="10,0"/>
        </StatusBar>
    </Grid>
</Window>
