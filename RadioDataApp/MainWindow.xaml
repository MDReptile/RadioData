<Window x:Class="RadioDataApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:RadioDataApp"
        xmlns:vm="clr-namespace:RadioDataApp.ViewModels"
        mc:Ignorable="d"
        Title="RadioData" Height="845" Width="1280" MinHeight="600" MinWidth="1024"
        TextElement.Foreground="#4CAF50"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="#1E1E1E"
        FontFamily="Consolas"
        Icon="icon.png">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="0"
                      UseAeroCaptionButtons="True"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <local:OpacityMultiplierConverter x:Key="OpacityMultiplierConverter"/>
        <SolidColorBrush x:Key="TerminalGreen" Color="#4CAF50"/>
        <SolidColorBrush x:Key="TerminalRed" Color="#EF5350"/>
        <SolidColorBrush x:Key="TerminalDark" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="TerminalGray" Color="#2D2D30"/>
        <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="PrimaryHueMidForegroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="MaterialDesignBody" Color="#4CAF50"/>
        <SolidColorBrush x:Key="MaterialDesign.Brush.ComboBox.Border" Color="#4CAF50"/>

        <Style x:Key="CaptionButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="10,0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#3E3E42"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="IsTabStop" Value="False"/>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource CaptionButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="GroupBox" BasedOn="{StaticResource MaterialDesignCardGroupBox}">
            <Setter Property="BorderBrush" Value="{StaticResource TerminalGreen}"/>
            <Setter Property="Foreground" Value="{StaticResource TerminalGreen}"/>
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Foreground="White" FontWeight="Bold"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="ProgressBar">
            <Setter Property="Foreground" Value="{StaticResource TerminalGreen}"/>
            <Setter Property="Background" Value="{StaticResource TerminalGray}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TerminalGreen}"/>
        </Style>
        
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TerminalGreen}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border x:Name="CheckBoxBorder" 
                                    Grid.Column="0"
                                    Width="18" 
                                    Height="18" 
                                    BorderBrush="{StaticResource TerminalGreen}" 
                                    BorderThickness="2" 
                                    Background="Transparent"
                                    CornerRadius="3"
                                    Margin="0,0,8,0">
                                <Path x:Name="CheckMark"
                                      Data="M 2,6 L 6,10 L 12,2"
                                      Stroke="{StaticResource TerminalGreen}"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"
                                      Stretch="Uniform"
                                      Margin="2"/>
                            </Border>
                            
                            <ContentPresenter Grid.Column="1" 
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"/>
                        </Grid>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="CheckMark" Property="Stroke" Value="#1E1E1E"/>
                            </Trigger>
                            
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#66BB6A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Foreground" Value="{StaticResource TerminalGreen}"/>
            <Style.Resources>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Background" Value="#252526"/>
                    <Setter Property="Foreground" Value="{StaticResource TerminalGreen}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="8,6"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border x:Name="ItemBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}"
                                        SnapsToDevicePixels="True">
                                    <ContentPresenter 
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsHighlighted" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="#3E3E42"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="#2D2D30"/>
                                        <Setter Property="Foreground" Value="#66BB6A"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="#808080"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style TargetType="Popup">
                    <Setter Property="AllowsTransparency" Value="False"/>
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsEditable" Value="False">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBox">
                                <Border Background="{StaticResource TerminalGray}"
                                        BorderBrush="{StaticResource TerminalGreen}"
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="24"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <ContentPresenter Grid.Column="0"
                                                          x:Name="ContentSite"
                                                          IsHitTestVisible="False"
                                                          Content="{TemplateBinding SelectionBoxItem}"
                                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                          Margin="8,6"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Left"/>
                                        
                                        <ToggleButton Grid.Column="0" Grid.ColumnSpan="2"
                                                      x:Name="ToggleButton"
                                                      Focusable="False"
                                                      IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                      ClickMode="Press">
                                            <ToggleButton.Style>
                                                <Style TargetType="ToggleButton">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ToggleButton">
                                                                <Border Background="Transparent"/>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ToggleButton.Style>
                                        </ToggleButton>
                                        
                                        <Path Grid.Column="1"
                                              Data="M 0 0 L 4 4 L 8 0 Z"
                                              Fill="{StaticResource TerminalGreen}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              IsHitTestVisible="False"/>
                                
                                        <Popup x:Name="Popup"
                                               Placement="Bottom"
                                               IsOpen="{TemplateBinding IsDropDownOpen}"
                                               AllowsTransparency="False"
                                               Focusable="False"
                                               PopupAnimation="Slide">
                                            <Border Background="#252526"
                                                    BorderBrush="{StaticResource TerminalGreen}"
                                                    BorderThickness="1"
                                                    Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}"
                                                    MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                </ScrollViewer>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Border BorderBrush="#1E1E1E" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="#2D2D30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                    <Image Source="icon.png" Width="16" Height="16" Margin="0,0,8,0"/>
                    <TextBlock Text="RadioData" 
                               Foreground="#CCCCCC" 
                               VerticalAlignment="Center"
                               FontFamily="Segoe UI"
                               FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource CaptionButtonStyle}"
                            Content="&#xE921;"
                            Click="MinimizeButton_Click"
                            ToolTip="Minimize"/>
                    <Button Style="{StaticResource CaptionButtonStyle}"
                            Content="&#xE922;"
                            Click="MaximizeRestoreButton_Click"
                            ToolTip="Maximize"/>
                    <Button Style="{StaticResource CloseButtonStyle}"
                            Content="&#xE8BB;"
                            Click="CloseButton_Click"
                            ToolTip="Close"/>
                </StackPanel>
            </Grid>

            <!-- Hidden TextBox for UI test logging (Width/Height 0 but still accessible to UI Automation) -->
            <TextBox x:Name="TestLogInput"
                     Grid.Row="1"
                     AutomationProperties.AutomationId="TestLogInput"
                     Width="0"
                     Height="0"
                     IsEnabled="True"
                     TextChanged="TestLogInput_TextChanged"/>

            <!-- Header -->
            <Border Grid.Row="1" Background="{StaticResource TerminalGray}" Padding="16,8">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TerminalGreen}">
                        RadioData - Audio Data Transfer
                    </TextBlock>
                    
                    <Button DockPanel.Dock="Right"
                            x:Name="DeleteDataButton"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Content="Delete Data"
                            Style="{DynamicResource MaterialDesignOutlinedButton}"
                            Foreground="{StaticResource TerminalRed}"
                            BorderBrush="{StaticResource TerminalRed}"
                            Padding="8,4"
                            Height="28"
                            FontSize="11"
                            Margin="8,0,0,0"
                            Click="DeleteDataButton_Click"
                            ToolTip="Open menu to selectively delete logs, files, or reset settings">
                        <Button.ContextMenu>
                            <ContextMenu Background="#2D2D30" BorderBrush="{StaticResource TerminalGreen}">
                                <MenuItem Header="Clear Chat History" 
                                          Command="{Binding ClearChatCommand}"
                                          Foreground="{StaticResource TerminalGreen}"
                                          ToolTip="Remove all chat messages from display and storage"/>
                                <MenuItem Header="Clear System Log" 
                                          Command="{Binding ClearSystemLogCommand}"
                                          Foreground="{StaticResource TerminalGreen}"
                                          ToolTip="Clear the system log (transmission/reception events)"/>
                                <MenuItem Header="Delete Received Files..." 
                                          Command="{Binding DeleteReceivedFilesCommand}"
                                          Foreground="{StaticResource TerminalGreen}"
                                          ToolTip="Delete all files in the ReceivedFiles folder"/>
                                <Separator Background="#4CAF50" Opacity="0.3"/>
                                <MenuItem Header="Reset Settings to Default..." 
                                          Command="{Binding ResetSettingsCommand}"
                                          Foreground="#FFA726"
                                          ToolTip="Reset encryption key, client name, and all tuning parameters"/>
                                <MenuItem Header="Reset Everything..." 
                                          Command="{Binding ResetEverythingCommand}"
                                          Foreground="{StaticResource TerminalRed}"
                                          FontWeight="Bold"
                                          ToolTip="Clear all logs, delete files, and reset all settings to factory defaults"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                    
                    <Grid DockPanel.Dock="Right"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Width="250"
                          Margin="0,0,8,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0"
                                 x:Name="ClientNameBox"
                                 Text="{Binding ClientName, UpdateSourceTrigger=PropertyChanged}"
                                 MaxLength="10"
                                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                                 Foreground="{StaticResource TerminalGreen}"
                                 CaretBrush="{StaticResource TerminalGreen}"
                                 materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource TerminalGreen}"
                                 materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                                 BorderBrush="{StaticResource TerminalGreen}"
                                 FontSize="12"
                                 Padding="8,6"
                                 Margin="0,0,8,0"
                                 KeyDown="ClientNameBox_KeyDown"
                                 ToolTip="Your identifier shown in chat messages (max 10 chars). Auto-generated on first launch."/>
                        
                        <TextBlock Grid.Column="1"
                                   VerticalAlignment="Center"
                                   FontSize="11"
                                   Foreground="{StaticResource TerminalGreen}"
                                   Opacity="0.7"
                                   Text="{Binding ClientName.Length, StringFormat={}{0}/10, FallbackValue=0/10}"/>
                    </Grid>
                </DockPanel>
            </Border>

            <!-- Main Content - 2 Column Layout -->
            <Grid Grid.Row="2" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" MinWidth="400"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="3*" MinWidth="500"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT COLUMN: Controls and Settings -->
                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Audio Devices -->
                        <GroupBox Header="AUDIO DEVICES" Margin="0,0,0,8">
                            <StackPanel Margin="8">
                                <ComboBox materialDesign:HintAssist.Hint="Input Device" 
                                          AutomationProperties.AutomationId="InputDeviceCombo"
                                          ItemsSource="{Binding InputDevices}" 
                                          SelectedIndex="{Binding SelectedInputDeviceIndex}"
                                          Foreground="{StaticResource TerminalGreen}"
                                          materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource TerminalGreen}"
                                          Margin="0,0,0,8"
                                          ToolTip="Select your microphone or radio input device. Use 'Loopback' for software-only testing."/>
                                          
                                <ComboBox materialDesign:HintAssist.Hint="Output Device" 
                                          AutomationProperties.AutomationId="OutputDeviceCombo"
                                          ItemsSource="{Binding OutputDevices}" 
                                          SelectedIndex="{Binding SelectedOutputDeviceIndex}"
                                          Foreground="{StaticResource TerminalGreen}"
                                          materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource TerminalGreen}"
                                          ToolTip="Select your speakers or radio output device. Use 'Loopback' for software-only testing."/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Audio Meters - Horizontal Layout -->
                        <GroupBox Header="AUDIO METERS" Margin="0,0,0,8"
                                  ToolTip="Real-time visualization of audio frequency and volume. Input (green) shows received signals, Output (red) shows transmitted signals.">
                            <Grid Margin="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- INPUT METERS -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="INPUT" Foreground="{StaticResource TerminalGreen}" FontSize="10" FontWeight="Bold" Margin="0,0,0,4"/>
                                    
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="35"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Freq:" VerticalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Grid.Column="1" Value="{Binding InputFrequency}" Minimum="1000" Maximum="2400" Height="8"
                                                     Opacity="{Binding InputVolume, Converter={StaticResource OpacityMultiplierConverter}}"
                                                     ToolTip="Shows detected audio frequency (1200 Hz = Mark/1, 2200 Hz = Space/0)"/>
                                    </Grid>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="35"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Vol:" VerticalAlignment="Center" FontSize="10"/>
                                        <ProgressBar Grid.Column="1" Value="{Binding InputVolume}" Minimum="0" Maximum="1" Height="6"
                                                     ToolTip="Shows input signal strength (aim for 50-80% for best reception)"/>
                                    </Grid>
                                </StackPanel>
                                
                                <!-- OUTPUT METERS -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="OUTPUT" Foreground="{StaticResource TerminalRed}" FontSize="10" FontWeight="Bold" Margin="0,0,0,4"/>
                                    
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="35"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Freq:" VerticalAlignment="Center" Foreground="{StaticResource TerminalRed}" FontSize="10"/>
                                        <ProgressBar Grid.Column="1" Value="{Binding OutputFrequency}" Minimum="1000" Maximum="2400" Height="8" 
                                                     Foreground="{StaticResource TerminalRed}"
                                                     Opacity="{Binding OutputVolume, Converter={StaticResource OpacityMultiplierConverter}}"
                                                     ToolTip="Shows transmitted audio frequency (should alternate between 1200 Hz and 2200 Hz)"/>
                                    </Grid>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="35"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Vol:" VerticalAlignment="Center" Foreground="{StaticResource TerminalRed}" FontSize="10"/>
                                        <ProgressBar Grid.Column="1" Value="{Binding OutputVolume}" Minimum="0" Maximum="1" Height="6" Foreground="{StaticResource TerminalRed}"
                                                     ToolTip="Shows output signal strength (fixed at 25% for optimal radio VOX triggering)"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <!-- Transmission Controls -->
                        <GroupBox Header="TRANSMISSION" Margin="0,0,0,8">
                            <StackPanel Margin="8">
                                <TextBlock Text="Encryption Key" 
                                           FontSize="10" 
                                           Foreground="White"
                                           Margin="0,0,0,2"/>
                                <TextBox x:Name="EncryptionKeyBox"
                                         Text="{Binding EncryptionKey, UpdateSourceTrigger=PropertyChanged}"
                                         AutomationProperties.AutomationId="EncryptionKeyBox"
                                         MaxLength="64"
                                         Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                                         Foreground="{StaticResource TerminalGreen}"
                                         CaretBrush="{StaticResource TerminalGreen}"
                                         materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource TerminalGreen}"
                                         BorderBrush="{StaticResource TerminalGreen}"
                                         Margin="0,0,0,16"
                                         KeyDown="EncryptionKeyBox_KeyDown"
                                         ToolTip="Shared password for encryption (1-64 characters). Both sender and receiver must use the same key. XOR cipher provides basic privacy, not military-grade security."/>
                            
                                <TextBlock Text="Enter message..." 
                                           FontSize="10" 
                                           Foreground="White"
                                           Margin="0,0,0,2"/>
                                <TextBox x:Name="MessageTextBox"
                                         Text="{Binding MessageToSend, UpdateSourceTrigger=PropertyChanged}"
                                         AutomationProperties.AutomationId="MessageTextBox"
                                         MaxLength="120"
                                         Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                                         Foreground="{StaticResource TerminalGreen}"
                                         CaretBrush="{StaticResource TerminalGreen}"
                                         materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource TerminalGreen}"
                                         BorderBrush="{StaticResource TerminalGreen}"
                                         Margin="0,0,0,8"
                                         KeyDown="MessageTextBox_KeyDown"
                                         ToolTip="Type your message here (max 120 characters). Will be encrypted and sent as audio tones. Press Enter to send."/>

                                <CheckBox Content="Enable Image Compression [12-bit]" 
                                          IsChecked="{Binding CompressImages}"
                                          Foreground="{StaticResource TerminalGreen}"
                                          Margin="0,0,0,8"
                                          ToolTip="Compress images to 12-bit color (4 bits per channel) before sending. Reduces file size by ~50% but lowers quality. Decompressed automatically on receive."/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Button Grid.Column="0" Command="{Binding StartTransmissionCommand}" 
                                            AutomationProperties.AutomationId="SendTextButton"
                                            Content="Send Text" 
                                            Style="{DynamicResource MaterialDesignRaisedButton}"
                                            Background="{StaticResource TerminalGreen}"
                                            Foreground="{StaticResource TerminalDark}"
                                            BorderBrush="{StaticResource TerminalGreen}"
                                            Height="36"
                                            ToolTip="Send the message as encrypted audio tones (250 baud). Takes ~2-4 seconds depending on message length."/>

                                    <Button Grid.Column="2" Command="{Binding SendFileCommand}" 
                                            AutomationProperties.AutomationId="SendFileButton"
                                            Content="Send File" 
                                            Style="{DynamicResource MaterialDesignRaisedButton}"
                                            Background="{StaticResource TerminalGreen}"
                                            Foreground="{StaticResource TerminalDark}"
                                            BorderBrush="{StaticResource TerminalGreen}"
                                            Height="36"
                                            ToolTip="Select a file to send. Large files are split into 200-byte packets. Images can be compressed if enabled above."/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <!-- Transfer Status -->
                        <GroupBox Header="TRANSFER STATUS"
                                  ToolTip="Shows progress for file transfers. Received files are saved to the ReceivedFiles folder.">
                            <StackPanel Margin="8">
                                <Grid Margin="0,0,0,5">
                                    <TextBlock Text="Progress:" VerticalAlignment="Center" FontSize="10"/>
                                    <Button HorizontalAlignment="Right"
                                            Command="{Binding OpenReceivedFolderCommand}"
                                            Content="Open Files"
                                            Style="{DynamicResource MaterialDesignOutlinedButton}"
                                            Foreground="{StaticResource TerminalGreen}"
                                            BorderBrush="{StaticResource TerminalGreen}"
                                            Padding="6,2"
                                            Height="22"
                                            FontSize="9"
                                            ToolTip="Open the folder where received files are saved"/>
                                </Grid>
                                
                                <ProgressBar Value="{Binding TransferProgress}" Maximum="100" Height="12" Margin="0,0,0,5"/>
                                
                                <TextBlock Text="{Binding TransferStatus}" 
                                           TextWrapping="Wrap"
                                           FontSize="9"
                                           FontFamily="Consolas"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>

                <!-- RIGHT COLUMN: Advanced Tuning + System Log + Chat -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Advanced Tuning (Top) -->
                    <GroupBox Grid.Row="0" Header="ADVANCED TUNING"
                              ToolTip="Fine-tune demodulation parameters to fix asymmetric send/receive issues. Adjust these if one direction works better than the other.">
                        <StackPanel Margin="8">
                            <TextBlock Text="Squelch Threshold (0.000 - 0.100)" Foreground="White" FontSize="10" Margin="0,0,0,2"/>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" 
                                        Value="{Binding SquelchThreshold}" 
                                        AutomationProperties.AutomationId="SquelchSlider"
                                        Minimum="0.000" 
                                        Maximum="0.100" 
                                        TickFrequency="0.001"
                                        IsSnapToTickEnabled="True"
                                        Foreground="{StaticResource TerminalGreen}"
                                        ToolTip="Minimum signal strength to attempt decoding. Increase if decoder tries to process background noise. Default 0.01 (1%). Try 0.02-0.05 if seeing garbage bytes from ambient noise."/>
                            </Grid>

                            <TextBlock Text="Input Gain (0.5x - 2.0x)" Foreground="White" FontSize="10" Margin="0,0,0,2"/>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" 
                                        Value="{Binding InputGain}" 
                                        AutomationProperties.AutomationId="InputGainSlider"
                                        Minimum="0.5" 
                                        Maximum="2.0" 
                                        TickFrequency="0.1"
                                        IsSnapToTickEnabled="True"
                                        Foreground="{StaticResource TerminalGreen}"
                                        ToolTip="Amplify weak input signals. Try 1.5x if receiving fails. Reduce to 0.8x if signal clips. Warning appears in log if too high."/>
                            </Grid>

                            <TextBlock Text="Zero-Crossing Threshold (10-20)" Foreground="White" FontSize="10" Margin="0,0,0,2"/>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" 
                                        Value="{Binding ZeroCrossingThreshold}" 
                                        AutomationProperties.AutomationId="ZeroCrossingSlider"
                                        Minimum="10" 
                                        Maximum="20" 
                                        TickFrequency="1"
                                        IsSnapToTickEnabled="True"
                                        Foreground="{StaticResource TerminalGreen}"
                                        ToolTip="Distinguishes 1200 Hz from 2200 Hz tones. Lower (12) = more sensitive to high frequency, Higher (16) = more sensitive to low frequency. Adjust if one direction fails."/>
                            </Grid>

                            <TextBlock Text="Start Bit Compensation (-5.0 to +5.0)" Foreground="White" FontSize="10" Margin="0,0,0,2"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" 
                                        Value="{Binding StartBitCompensation}" 
                                        AutomationProperties.AutomationId="StartBitSlider"
                                        Minimum="-5.0" 
                                        Maximum="5.0" 
                                        TickFrequency="0.5"
                                        IsSnapToTickEnabled="True"
                                        Foreground="{StaticResource TerminalGreen}"
                                        ToolTip="Adjusts timing offset for bit detection. Negative = more delay (slower detection), Positive = less delay (faster). Try -3.0 if getting garbled data."/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>

                    <!-- System Log (Middle) -->
                    <GroupBox Grid.Row="2" Header="SYSTEM LOG"
                              ToolTip="Real-time log of all transmissions, receptions, and system events. TX = transmitted, RX = received.">
                        <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                            <TextBox Text="{Binding DebugLog, Mode=OneWay}" 
                                     AutomationProperties.AutomationId="LogTextBox"
                                     TextWrapping="Wrap" 
                                     FontFamily="Consolas" 
                                     FontSize="11"
                                     IsReadOnly="True"
                                     Background="{StaticResource TerminalGray}"
                                     Foreground="{StaticResource TerminalGreen}"
                                     BorderThickness="0"
                                     VerticalScrollBarVisibility="Disabled"
                                     HorizontalScrollBarVisibility="Disabled"/>
                        </ScrollViewer>
                    </GroupBox>

                    <!-- Chat (Bottom) -->
                    <GroupBox Grid.Row="4" Header="CHAT"
                              ToolTip="Conversation view of sent and received text messages. Shows your name and remote messages.">
                        <ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto">
                            <TextBox Text="{Binding ChatLog, Mode=OneWay}" 
                                     AutomationProperties.AutomationId="ChatTextBox"
                                     TextWrapping="Wrap" 
                                     FontFamily="Consolas" 
                                     FontSize="11"
                                     IsReadOnly="True"
                                     Background="{StaticResource TerminalGray}"
                                     Foreground="{StaticResource TerminalGreen}"
                                     BorderThickness="0"
                                     VerticalScrollBarVisibility="Disabled"
                                     HorizontalScrollBarVisibility="Disabled"/>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </Grid>

            <!-- Status Bar -->
            <StatusBar Grid.Row="3" Background="{StaticResource TerminalGray}" Foreground="{StaticResource TerminalGreen}">
                <StatusBar.ItemsPanel>
                    <ItemsPanelTemplate>
                        <DockPanel LastChildFill="True"/>
                    </ItemsPanelTemplate>
                </StatusBar.ItemsPanel>
                <StatusBarItem>
                    <TextBlock Text="{Binding StatusMessage}" Margin="10,0" FontFamily="Consolas"/>
                </StatusBarItem>
                <StatusBarItem DockPanel.Dock="Right">
                    <TextBlock Text="{Binding AppVersion}" Margin="10,0" FontFamily="Consolas" FontSize="10" Opacity="0.7"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Border>
</Window>
