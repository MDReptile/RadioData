<Application x:Class="RadioDataApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                
                <!-- Custom Theme Overrides -->
                <ResourceDictionary>
                    <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#4CAF50"/>
                    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#454545"/> <!-- Header Background: Lighter Gray -->
                    <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#1E1E1E"/>
                    <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush" Color="#1E1E1E"/>
                    <SolidColorBrush x:Key="PrimaryHueMidForegroundBrush" Color="#4CAF50"/> <!-- Header Text: Green -->
                    <SolidColorBrush x:Key="PrimaryHueDarkForegroundBrush" Color="#4CAF50"/>
                    
                    <SolidColorBrush x:Key="SecondaryHueLightBrush" Color="#4CAF50"/>
                    <SolidColorBrush x:Key="SecondaryHueMidBrush" Color="#4CAF50"/>
                    <SolidColorBrush x:Key="SecondaryHueDarkBrush" Color="#4CAF50"/>
                    <SolidColorBrush x:Key="SecondaryHueLightForegroundBrush" Color="#1E1E1E"/>
                    <SolidColorBrush x:Key="SecondaryHueMidForegroundBrush" Color="#1E1E1E"/>
                    <SolidColorBrush x:Key="SecondaryHueDarkForegroundBrush" Color="#1E1E1E"/>

                    <SolidColorBrush x:Key="MaterialDesignBody" Color="#4CAF50"/>
                    <SolidColorBrush x:Key="MaterialDesignPaper" Color="#1E1E1E"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
